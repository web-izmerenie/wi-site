/**
 * reviews section styles
 *
 * @author Viacheslav Lotsmanov
 */

&
	background white
	padding-top (150px - 22px)
	z-index 0
	position relative

h2
	custom-font('Proxima Nova Lt', normal, 24px, 29px)
	color black
	text-align center
	max-width 720px
	margin 0 auto
	padding-x 40px

ul.reviews-list
	$bq-w = 360px
	$bq-h = 350px
	$el-size = 180px
	$margin = 90px

	reset-box-model()
	display block
	size 100% auto
	min-height $el-size
	overflow auto
	white-space nowrap
	text-align center
	padding-top 121px
	padding-bottom 60px

	.scrollingHotSpotLeft
		min-width 75px
		width 25%
		height 100%
		position absolute
		z-index 200
		left 0

	.scrollingHotSpotRight
		min-width 75px
		width 25%
		height 100%
		position absolute
		z-index 200
		right 0

	.scrollWrapper
		position relative
		overflow hidden
		width 100%
		height 100%
		.scrollableArea
			position relative
			display block
			margin 0 auto
			padding 80px 0

			>li
				reset-box-model()
				display inline-block
				size $el-size
				vertical-align top
				position relative
				perspective 700px
				z-index 0
				transition z-index $animation-speed $animation-curve

				$p = 100px

				& + li
					margin-left $margin
				&:first-child
					margin-left $p
				&:last-child
					margin-right $p

				img
					display block
					absolute left 50% top 50%
					transform translate(-50%, -50%)
					z-index 10

				blockquote
					display block
					size $bq-w $bq-h
					background $light-bg-color-1
					absolute left 50% top 50%
					opacity 0
					z-index 15
					padding-x 40px
					padding-top 39px
					box-sizing border-box
					transform translate(-50%, -45%) rotateX(-90deg)
					transition opacity $animation-speed $animation-curve,
						transform $animation-speed $animation-curve

					&:before
						pseudo-block()
						size 40px 3px
						absolute left 50% top 36px
						transform translateX(-50%)
						background white
						z-index 15

					hr
						display none

					>.inside
						display table
						size 100% 265px
						margin 0 auto

						>.text, >.signature
							display table-row

							>p
								display table-cell
								vertical-align middle
								just-set-font('Proxima Nova Rg')
								white-space normal

						>.text >p
							font-metrics(14px, 20px)
							color $light-content-color-1

						>.signature >p
							font-metrics(12px, 18px)
							color black
							height 1%

							strong, b
								custom-font('Proxima Nova Rg', bold, 13px, 19px)
								text-transform uppercase
								display block
								position relative
								$pt = 32px
								padding-top $pt

								&:before
									pseudo-block()
									size 40px 3px
									background white
									z-index 15
									absolute left 50% top 0
									transform translateX(-50%)

							em, i
								font-style normal

				&:hover, &.focused
					z-index 10

				&:hover blockquote
				a:focus + blockquote
				a:active + blockquote
					opacity 1
					transform translate(-50%, -45%) rotateY(0deg)
					transition opacity 50ms $animation-curve,
						transform $animation-speed $animation-curve
