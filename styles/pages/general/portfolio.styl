/**
 * General page portfolio styles
 *
 * @author Viacheslav Lotsmanov
 */

&
	width 100%
	box-sizing border-box
	overflow hidden
	position relative
	z-index 0

.title-block, .more-block
	background white
	color $dark-content-color-1
	text-align center
	padding-x 50px

.title-block
	h2
		custom-font('Proxima Nova Rg', bold)
		text-transform uppercase

	h3
		custom-font('Proxima Nova Rg', normal)

& > ul
	display block
	background $dark-bg-color-1
	perspective 700px

	& > li
		display block
		background $round-button-color
		overflow hidden
		position relative
		transform rotateX(-90deg)
		opacity 0
		transition transform ($animation-speed*3) $animation-curve,
			opacity ($animation-speed*4) $animation-curve

		&.visible
			transform rotateX(0deg)
			opacity 1

		&:nth-child(even)
			background $round-button-hover-color

		img.bg
			display block
			min-height 330px
			min-width 100%
			absolute top 50% left 50%
			transform translate(-50%, -50%)
			z-index 0

		a
			display block
			size 100%
			z-index 10
			background transparent
			text-decoration none
			absolute top 0 left 0

		.text
			display block
			padding-x 50px
			box-sizing border-box
			relative top 50%
			transform translateY(-50%)
			z-index 5
			color white
			text-align center
			opacity 0
			transition opacity $animation-speed $animation-curve

			&:before
				pseudo-block()
				size 100% 1000px
				absolute top -500px left 0
				background $dark-bg-color-1
				opacity 0.7
				z-index -1

			h3
				custom-font('Proxima Nova Rg', bold)
				text-transform uppercase

			h4
				custom-font('Proxima Nova Rg', normal)

		&:hover .text
			opacity 1

.more-block
	& > a
		$size = 108px

		display inline-block
		white-space nowrap
		custom-font('Proxima Nova Rg', normal)
		color white
		position relative
		text-decoration none
		transition color $animation-speed $animation-curve

		i.a
			display block
			size $size
			border-radius ($size / 2)
			background $round-button-color
			transition background-color $animation-speed $animation-curve
			absolute top 0 right 50%

		i.b
			display block
			icon($icons.plus)
			absolute top 31px right 50%

		&:hover i.a
			background $round-button-hover-color

		&:hover
			color $dark-content-color-1
