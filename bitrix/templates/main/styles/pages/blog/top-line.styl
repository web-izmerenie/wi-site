/**
 * ".top-line" block styles of blog page
 *
 * @author Viacheslav Lotsmanov
 */

&
	display block
	position relative
	box-sizing border-box
	padding-bottom 2px

.valign-helper
.rss-link
form.search-form
	display inline-block
	vertical-align bottom

.valign-helper
	size 0 100%

.rss-link
	custom-font('Proxima Nova Lt', normal, 24px, 26px)
	text-transform uppercase
	color $light-content-color-4
	transition color $animation-speed $animation-curve
	text-decoration none
	margin-bottom 9px
	padding-left 28px
	position relative
	z-index 0

	i.icon
		display block
		color #ffa00a
		absolute left 0 top 1px
		z-index 10
		size 22px 21px
		opacity 1
		transition opacity $animation-speed $animation-curve

	&:hover
		color alpha($light-content-color-4, 50%)

		i.icon
			opacity 0.5

form.search-form
	absolute right 0 bottom 2px
	box-sizing border-box

	$h = 46px
	padding-right $h
	height $h
	overflow hidden

	label.text
		size 100% $h
		z-index 0
		white-space nowrap
		absolute left 0 top 0
		padding-right $h
		box-sizing border-box

		> input
			reset-box-model()
			size 100% $h
			custom-font('Proxima Nova Lt', normal, 21px, $h)
			color $light-content-color-4
			background alpha(white, 0%)
			z-index 1

		> span
			size auto $h
			custom-font('Proxima Nova Lt', normal, 21px, $h)
			color $light-content-color-4
			cursor text
			transition color $animation-speed $animation-curve
			z-index 2
			absolute left 0 top 0

		> input:focus + span
		> input.has-value + span
			color alpha(white, 0%)
			z-index -1

	label.submit
		display block
		size $h
		absolute right 0 bottom 0
		overflow hidden
		cursor pointer
		z-index 1

		&:before
			pseudo-block()
			icon($icons.lens)
			size 100%
			absolute left 0 top 0
			background-position center center
			opacity 1
			transition opacity $animation-speed $animation-curve

		&:hover:before
			opacity 0.5

		> input
			absolute left 50% top 50%
			transform translate(-50%, -50%)
			z-index -1
			opacity 0

hr
	reset-box-model()
	absolute left 0 bottom 0
	background $light-content-color-5
	size 100% 2px
