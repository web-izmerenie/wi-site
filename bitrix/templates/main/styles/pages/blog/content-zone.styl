/**
 * ".content-zone" block styles of blog page
 *
 * @author Viacheslav Lotsmanov
 */

&
	display block
	position relative

	&:after
		pseudo-block()
		clear both

.col
	&.col-left
		@import 'col-left'
	&.col-right
		@import 'col-right'

	@media (max-width: ($sizes.small))
		float none
		clear both
		width 100% !important
